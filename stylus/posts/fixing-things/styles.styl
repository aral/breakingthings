@import '../../rem16px'

.iphone-screenshot {
	width: 320px;
	height: 200px;
	box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
	margin-top: 14rem;
	margin-bottom: 14rem;
}

.fullsize-iphone-screenshot {
	height: 480px;
	margin-top: 12rem;
	margin-bottom: 12rem;
}

@media screen and (max-width:320px) {
	.iphone-screenshot, .fullsize-iphone-screenshot {
		width:240px;
		height:auto;
	}
}